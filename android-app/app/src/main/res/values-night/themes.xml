<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Daily" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryVariant">@color/red</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_gray</item>
        <item name="colorSecondaryVariant">@color/dark_gray</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/dark_red</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="EventTitle">
        <item name="color">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="EventTime">
        <item name="android:textSize">12sp</item>
        <item name="color">@color/white</item>
    </style>

    <style name="Menu">
        <item name="color">@color/white</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="CurrentTab" parent="Menu">
        <item name="color">@color/background</item>
    </style>
</resources>